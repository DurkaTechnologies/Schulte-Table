<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:Schulte.UserControls">
    <Style  x:Key="baseStyle" TargetType="{x:Type Border}">
        <Setter Property="TextBlock.FontSize" Value="25"></Setter>
        <Setter Property="TextBlock.FontWeight" Value="Bold"></Setter>
        <Setter Property="TextBlock.Foreground" Value="Black"></Setter>
    </Style>
    
    <Style  x:Key="roundBtnStyle" TargetType="{x:Type local:RoundButton}">
        <Setter Property="Background" Value="#FFD854AE"></Setter>
        <Setter Property="BorderBrush" Value="DarkViolet"></Setter>
        <Setter Property="BorderStyle" Value="{StaticResource baseStyle}"/>
    </Style>
    <Style  x:Key="tileStyle" TargetType="{x:Type local:Tile}">
        <Setter Property="Background" Value="#FFD854AE"></Setter>
        <Setter Property="BorderBrush" Value="DarkViolet"></Setter>
        <Setter Property="BorderStyle" Value="{StaticResource baseStyle}"/>
    </Style>
